{
  "include": ["../types/remix.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["functions/**/*"],
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "types": ["@cloudflare/workers-types"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },

    // Remix takes care of building everything in the `app` directory.
    "noEmit": true
  }
}
